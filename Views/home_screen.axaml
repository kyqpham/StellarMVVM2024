<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="StellarMVVM_2024.Views.home_screen">
	<UserControl.Styles>
		<StyleInclude Source="/Styles/home_screen_stylesheet.axaml"/>
	</UserControl.Styles>
	<Panel Background="Pink">
		<StackPanel
				Name="homeStackPanel">
			<TextBlock
				Classes="title"
				Padding="20,50,20,20"
				FontSize="25">
				welcome to "stellar"
			</TextBlock>
			<TextBlock
					Classes="title"
					Padding="20,0,20,20"
					FontSize="20"
					Foreground="Snow">
				"reach for the stars" -- a money management aid
			</TextBlock>
			<TextBlock
				Classes="title"
				Padding="20,0,20,20"
				FontSize="15"
				Foreground="Snow">
				use the buttons below to navigate
			</TextBlock>
			<Button
				Classes="navigation"
				Name="learningArchiveButton"
				Click="archiveClicked">
				learning archive
			</Button>
			<Button
				Classes="navigation"
				Name="budgetingButton"
				Click="budgetClicked">
				budgeting
			</Button>
			<Button
				Classes="navigation"
				Name="financialCalculatorsButton"
				Click="calculatorsClicked">
				financial calculators
			</Button>
		</StackPanel>
	</Panel>
</UserControl>